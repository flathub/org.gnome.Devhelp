{
    "id": "org.gnome.Devhelp",
    "runtime": "org.gnome.Sdk",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "devhelp",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host:ro",
        "--metadata=X-DConf=migrate-path=/org/gnome/devhelp/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "man",
        "share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "devhelp",
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak_build=true",
                "-Dprofile=stable",
                "-Dgtk_doc=false",
                "-Dbuildtype=release"
            ],
            "run-tests": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/devhelp.git",
                    "tag": "43.0",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "devhelp"
                    }
                },
                {
                    "type": "patch",
                    "path": "patches/devhelp-appstream.patch"
                }
            ]
        }
    ]
}