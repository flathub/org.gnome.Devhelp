{
    "app-id": "org.gnome.Devhelp",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "devhelp",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=host:ro",
        "--metadata=X-DConf=migrate-path=/org/gnome/devhelp/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "man",
        "share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "amtk",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dbuildtype=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/amtk/5.2/amtk-5.2.0.tar.xz",
                    "sha256": "820545bb4cf87ecebc2c3638d6b6e58b8dbd60a419a9b43cf020124e5dad7078",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "amtk"
                    }
                }
            ]
        },
        {
            "name": "devhelp",
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak_build=true",
                "-Dprofile=stable",
                "-Dgtk_doc=false",
                "-Dbuildtype=release"
            ],
            "run-tests": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/devhelp.git",
                    "tag": "40.1"
                }
            ]
        }
    ]
}